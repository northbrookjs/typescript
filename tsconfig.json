{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "noImplicitAny": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": ".tmp",
    "types": [
      "findup-sync",
      "minimist",
      "mkdirp",
      "mocha",
      "node",
      "ramda",
      "semver"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*.*"
  ]
}
